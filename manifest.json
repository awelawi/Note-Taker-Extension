{
    "name": "Notes Taker extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "windows",
        "tabs",
        "chrome.runtime"

    ],
    "description": "Take Online Notes that are saved with Notes Taker Chrome Extension",
    "content_scripts": [
        {
            "matches":["http://127.0.0.1/*"],
            "css":["style.css"],
            "js": [
                "extension.js"
            ],
            "run_at": "document_end"
        }
    ],
    "background":{
        "service_worker": "background.js"
    },
    "icons":{
        "16":"notes_img.png",
        "32": "notes_img.png",
        "48": "notes_img.png",
        "128": "notes_img.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "notes_img.png"
    }
}

